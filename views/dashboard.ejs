<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tracker CarSat - <%= pageTitle %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
          colors: {
            primary: '#4f46e5', // Azul principal da Tracker CarSat
            secondary: '#6b7280', // Cinza para texto
            accent: '#10b981', // Verde de destaque
            warning: '#f59e0b', // Laranja de aviso
            danger: '#ef4444', // Vermelho de perigo
          }
        }
      }
    }
  </script>
  <!-- CSS Personalizado para ajustes e responsividade das tabelas -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100 font-sans text-gray-800 flex">

  <!-- Sidebar de Navega√ß√£o -->
  <aside class="w-64 bg-gray-900 text-white flex flex-col p-4 shadow-lg fixed h-full z-10 md:static transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out" id="sidebar">
    <div class="text-xl font-bold mb-8 text-center border-b border-gray-700 pb-4">
      Tracker CarSat
    </div>
    <nav class="flex-grow">
      <ul>
        <li class="mb-2">
          <a href="/" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üìä</span> Dashboard
          </a>
        </li>
        <li class="mb-2">
          <a href="/atendimentos-ativos" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üìû</span> Atendimentos Ativos
          </a>
        </li>
        <li class="mb-2">
          <a href="/historico-atendimentos" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üìú</span> Hist√≥rico de Atendimentos
          </a>
        </li>
        <li class="mb-2">
          <a href="/todas-mensagens" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üí¨</span> Todas as Mensagens
          </a>
        </li>
        <li class="mb-2">
          <a href="/todos-eventos" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üîî</span> Todos os Eventos
          </a>
        </li>
        <li class="mb-2">
          <a href="/avaliacoes" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">‚≠ê</span> Avalia√ß√µes
          </a>
        </li>
        <li class="mb-2">
          <a href="/tarefas-pendentes" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üìù</span> Tarefas Pendentes
          </a>
        </li>
        <!-- NOVO LINK AQUI -->
        <li class="mb-2">
          <a href="/gerenciar-atendentes" class="flex items-center px-4 py-2 rounded-lg text-gray-300 hover:bg-gray-700 hover:text-white transition-colors duration-200">
            <span class="mr-3">üë•</span> Gerenciar Atendentes
          </a>
        </li>
      </ul>
    </nav>
    <div class="mt-auto text-gray-500 text-sm text-center">
      &copy; <%= new Date().getFullYear() %> Tracker CarSat
    </div>
  </aside>

  <!-- Main Content Wrapper -->
  <div class="flex-1 flex flex-col min-h-screen relative md:ml-64">
    <!-- Navbar (for mobile toggle) -->
    <nav class="bg-white p-4 shadow-md md:hidden flex justify-between items-center">
      <button id="sidebarToggle" class="text-gray-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </button>
      <h2 class="text-xl font-semibold text-gray-800"><%= pageTitle %></h2>
    </nav>

    <!-- Main Content Area (where individual pages are injected) -->
    <main class="p-6 flex-1">
      <section class="mb-8 p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-primary pb-2 mb-6">Vis√£o Geral</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Card: Atendimentos Hoje -->
          <div class="bg-blue-50 text-primary p-6 rounded-lg shadow-md flex flex-col items-center justify-center">
            <h3 class="text-lg font-bold mb-2">Atendimentos Hoje</h3>
            <p class="text-5xl font-extrabold"><%= totalAtendimentosHoje %></p>
          </div>
          <!-- Card: Avalia√ß√£o M√©dia -->
          <div class="bg-green-50 text-accent p-6 rounded-lg shadow-md flex flex-col items-center justify-center">
            <h3 class="text-lg font-bold mb-2">Avalia√ß√£o M√©dia</h3>
            <p class="text-5xl font-extrabold"><%= avaliacaoMedia %></p>
          </div>
          <!-- Card: Atendentes Ocupados -->
          <div class="bg-red-50 text-danger p-6 rounded-lg shadow-md flex flex-col items-center justify-center">
            <h3 class="text-lg font-bold mb-2">Atendentes Ocupados</h3>
            <p class="text-5xl font-extrabold"><%= atendentesOcupados.length %></p>
          </div>
        </div>
      </section>

      <!-- Mensagens Recentes no Dashboard -->
      <section class="mb-8 p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-primary pb-2 mb-6">√öltimas Mensagens</h2>
        <% if (mensagensRecentes && mensagensRecentes.length > 0) { %>
          <div class="overflow-x-auto rounded-lg shadow-sm border border-gray-200">
            <table class="min-w-full bg-white table-auto text-sm table-responsive">
              <thead class="bg-primary text-white">
                <tr>
                  <th class="py-3 px-4 text-left">JID</th>
                  <th class="py-3 px-4 text-left">Dire√ß√£o</th>
                  <th class="py-3 px-4 text-left">Mensagem</th>
                  <th class="py-3 px-4 text-left">Hor√°rio</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% mensagensRecentes.forEach(msg => { %>
                  <tr>
                    <td class="py-3 px-4" data-label-1="JID"><%= cleanJid(msg.jid) %></td>
                    <td class="py-3 px-4" data-label-2="Dire√ß√£o">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold
                                    <%= msg.direcao === 'entrada' ? 'bg-blue-100 text-blue-800' : 'bg-purple-100 text-purple-800' %>">
                        <%= msg.direcao.charAt(0).toUpperCase() + msg.direcao.slice(1) %>
                      </span>
                    </td>
                    <td class="py-3 px-4" data-label-3="Mensagem"><%= msg.mensagem %></td>
                    <td class="py-3 px-4" data-label-4="Hor√°rio"><%= formatDate(msg.timestamp) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">Nenhuma mensagem recente.</p>
        <% } %>
      </section>

      <!-- Eventos Recentes no Dashboard -->
      <section class="mb-8 p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-primary pb-2 mb-6">√öltimos Eventos</h2>
        <% if (eventosRecentes && eventosRecentes.length > 0) { %>
          <div class="overflow-x-auto rounded-lg shadow-sm border border-gray-200">
            <table class="min-w-full bg-white table-auto text-sm table-responsive">
              <thead class="bg-primary text-white">
                <tr>
                  <th class="py-3 px-4 text-left">Tipo</th>
                  <th class="py-3 px-4 text-left">JID</th>
                  <th class="py-3 px-4 text-left">Setor</th>
                  <th class="py-3 px-4 text-left">Detalhes</th>
                  <th class="py-3 px-4 text-left">Hor√°rio</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% eventosRecentes.forEach(ev => { %>
                  <tr>
                    <td class="py-3 px-4" data-label-1="Tipo">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
                        <%= ev.tipo.replace(/_/g, ' ').toUpperCase() %>
                      </span>
                    </td>
                    <td class="py-3 px-4" data-label-2="JID"><%= cleanJid(ev.jid) %></td>
                    <td class="py-3 px-4" data-label-3="Setor"><%= setores[ev.setor] || '-' %></td>
                    <td class="py-3 px-4" data-label-4="Detalhes"><%= ev.detalhes || '-' %></td>
                    <td class="py-3 px-4" data-label-5="Hor√°rio"><%= formatDate(ev.timestamp) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">Nenhuma evento recente.</p>
        <% } %>
      </section>

      <!-- Avalia√ß√µes Recentes no Dashboard -->
      <section class="mb-8 p-6 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-primary pb-2 mb-6">√öltimas Avalia√ß√µes Recebidas</h2>
        <% if (avaliacoesRecentes && avaliacoesRecentes.length > 0) { %>
          <div class="overflow-x-auto rounded-lg shadow-sm border border-gray-200">
            <table class="min-w-full bg-white table-auto text-sm table-responsive">
              <thead class="bg-primary text-white">
                <tr>
                  <th class="py-3 px-4 text-left">Cliente</th>
                  <th class="py-3 px-4 text-left">Atendente</th>
                  <th class="py-3 px-4 text-left">Setor</th>
                  <th class="py-3 px-4 text-left">Nota</th>
                  <th class="py-3 px-4 text-left">Coment√°rio</th>
                  <th class="py-3 px-4 text-left">Hor√°rio</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% avaliacoesRecentes.forEach(av => { %>
                  <tr>
                    <td class="py-3 px-4" data-label-1="Cliente"><%= cleanJid(av.jid) %></td>
                    <td class="py-3 px-4" data-label-2="Atendente"><%= cleanJid(av.atendente) || '-' %></td>
                    <td class="py-3 px-4" data-label-3="Setor"><%= setores[av.setor] || '-' %></td>
                    <td class="py-3 px-4" data-label-4="Nota">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
                          <%= av.nota %> estrelas
                      </span>
                    </td>
                    <td class="py-3 px-4" data-label-5="Coment√°rio"><%= av.comentario || '-' %></td>
                    <td class="py-3 px-4" data-label-6="Hor√°rio"><%= formatDate(av.timestamp) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-600">Nenhuma avalia√ß√£o recente.</p>
        <% } %>
      </section>

      <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
          const sidebar = document.getElementById('sidebar');
          sidebar.classList.toggle('-translate-x-full');
        });
      </script>
    </main>
  </div>
</body>
</html>
